{
  "name": "swr-toolkit",
  "version": "0.1.0-alpha.0",
  "description": "An efficient and opinionated approach for work with SWR.",
  "keywords": [
    "swr",
    "react",
    "hooks",
    "request",
    "cache",
    "fetch",
    "toolkit",
    "rtk-query",
    "ssr"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "swr": "^2"
  },
  "devDependencies": {
    "@repo/config-typescript": "workspace:*",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "repository": "github:mohammadhosseinmoradi/swr-toolkit",
  "publishConfig": {
    "access": "public"
  }
}